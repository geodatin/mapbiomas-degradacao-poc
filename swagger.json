{
  "openapi": "3.0.0",
  "info": {
    "title": "Mapbiomas Degradação API",
    "version": "1.0.0"
  },
  "paths": {
    "/api/v1/territories": {
      "get": {
        "tags": [
          "Territórios"
        ],
        "description": "Lista todos os territórios.",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "territories": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer",
                            "example": 1
                          },
                          "category": {
                            "type": "string",
                            "enum": [
                              "biome",
                              "state",
                              "country"
                            ],
                            "example": "country"
                          },
                          "name": {
                            "type": "string",
                            "example": "Brasil"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/area/{territoryId}/{year}": {
      "get": {
        "tags": [
          "Estatísticas"
        ],
        "parameters": [
          {
            "name": "territoryId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 1
            }
          },
          {
            "name": "year",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 2022
            }
          },
          {
            "name": "fireAge",
